{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "settings": {
    "import/extensions": [
      ".mjs",
      ".js",
      ".cjs"
    ],
    "import/resolver": {
      "node": {
        "extensions": [
          ".mjs",
          ".js",
          ".cjs"
        ]
      }
    }
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_id",
          "__dirname"
        ]
      }
    ]
  }
}